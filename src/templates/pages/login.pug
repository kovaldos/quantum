extends ../template

block variables
    - var title = 'Войти'

block content
    main.login-page
        section.login
            .login__container.container
                h1.login__title.h2 Войти
                form.login__form.form__list(action="#" method="#" onsubmit="return false")
                    .form__item
                        input.form__input(type="text" name="login" id="login" data-required)
                        label.form__label(for="login") Логин
                    .form__item
                        input.form__input(type="password" name="pass" id="pass" data-required)
                        label.form__label(for="password") Пароль
                    button.form__btn.btn.btn--blue(type="submit") Отправить
                .login__wrap
                    a.login__link(href="#") Зарегистрироваться
                    a.login__link(href="#") Забыл пароль 